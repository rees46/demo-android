<resources>
    <style name="DrawerMenuButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="icon">@drawable/ic_arrow_right</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="HeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/header_textColor</item>
        <item name="android:textSize">@dimen/header_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProductDetails.Image">
        <item name="android:layout_height">342dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProductDetails.ProductName">
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_textColor</item>
    </style>

    <style name="ProductDetails.ProducerName">
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_textColor</item>
    </style>

    <style name="ProductDetails.RatingBar" parent="RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/yellow</item>
    </style>

    <style name="ProductDetails.Reviews">
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/default_textColor</item>
        <item name="android:text">@string/reviews</item>
    </style>

    <style name="ProductDetails.Description">
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/default_textColor</item>
    </style>
</resources>
