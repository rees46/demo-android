<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/default_offset"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/default_offset">

            <ImageView
                android:id="@+id/product_image"
                style="@style/ProductDetails.Image" />

            <TextView
                android:id="@+id/producer_name_text"
                style="@style/ProductDetails.ProductName"
                android:layout_marginTop="@dimen/card_product_default_offset"
                tools:text="Producer name" />

            <TextView
                android:id="@+id/product_name_text"
                style="@style/ProductDetails.ProducerName"
                tools:text="Producer name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_product_medium_offset">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/product_rating_bar"
                    style="@style/ProductDetails.RatingBar" />

                <TextView
                    android:id="@+id/reviews_text"
                    style="@style/ProductDetails.Reviews"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/description_text"
                style="@style/ProductDetails.Description"
                tools:text="Description text"
                android:layout_marginTop="@dimen/card_product_medium_offset" />

            <TextView
                android:id="@+id/old_price_text"
                style="@style/ProductDetails.OldPrice"
                tools:text="$ 1000"
                android:layout_marginTop="@dimen/card_product_default_offset" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_text"
                    style="@style/ProductDetails.Price"
                    tools:text="$ 759"
                    android:layout_marginTop="@dimen/small_default_offset" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    style="@style/ProductDetails.SaleCard"
                    android:layout_marginStart="@dimen/default_offset">

                    <TextView
                        android:id="@+id/sale_text"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        style="@style/ProductDetails.SaleCard.Text"
                        android:text="-35%"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/card_product_default_offset">

                <com.rees46.demo_android.ui.countCard.view.CountCardView
                    android:id="@+id/count_card"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.rees46.demo_android.ui.button.view.CommonBlackButton
                    android:id="@+id/add_to_cart_button"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/default_offset"
                    style="@style/ProductDetails.AddToCardButton" />
            </LinearLayout>
        </LinearLayout>

        <rees46.demo_android.feature.recommendationBlock.presentation.view.RecommendationBlockView
            android:id="@+id/recommendation_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_product_default_offset" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>