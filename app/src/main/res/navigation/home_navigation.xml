<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="rees46.demo_android.app.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_fragment_to_card_product_fragment"
            app:destination="@id/card_product_fragment">
        </action>
        <action
            android:id="@+id/action_home_fragment_to_productsFragment"
            app:destination="@id/products_fragment" />
    </fragment>

    <fragment
        android:id="@+id/card_product_fragment"
        android:name="rees46.demo_android.app.ui.cardProduct.CardProductFragment"
        tools:layout="@layout/fragment_card_product" >
        <argument
            android:name="product"
            app:argType="rees46.demo_android.domain.models.ProductDto" />
        <action
            android:id="@+id/action_card_product_fragment_to_products_fragment"
            app:destination="@id/products_fragment" />
    </fragment>
    <fragment
        android:id="@+id/products_fragment"
        android:name="rees46.demo_android.app.ui.products.ProductsFragment"
        tools:layout="@layout/fragment_products">
        <argument
            android:name="products"
            app:argType="rees46.demo_android.domain.models.ProductDto[]" />
        <action
            android:id="@+id/action_products_fragment_to_card_product_fragment"
            app:destination="@id/card_product_fragment" />
    </fragment>
</navigation>