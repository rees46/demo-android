<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="rees46.demo_android.features.main.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_fragment_to_card_product_fragment"
            app:destination="@id/card_product_fragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/card_product_fragment"
        android:name="rees46.demo_android.features.cardProduct.CardProductFragment"
        tools:layout="@layout/fragment_card_product" >
        <argument
            android:name="product"
            app:argType="rees46.demo_android.entities.products.ProductEntity" />
    </fragment>
</navigation>