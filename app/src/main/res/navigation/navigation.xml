<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startScreenFragment">

    <fragment
        android:id="@+id/startScreenFragment"
        android:name="rees46.demo_android.StartScreenFragment"
        android:label="fragment_start_screen"
        tools:layout="@layout/fragment_start_screen" >
        <action
            android:id="@+id/action_startScreenFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="rees46.demo_android.features.main.MainFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_main">

        <action android:id="@+id/action_home_fragment_to_card_product_fragment"
            app:destination="@id/searchCartFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchCartFragment"
        android:name="rees46.demo_android.features.cardProduct.CardProductFragment"
        android:label="fragment card product from search"
        tools:layout="@layout/fragment_card_product">

        <argument
            android:name="product"
            app:argType="rees46.demo_android.entities.products.ProductEntity" />
    </fragment>
</navigation>