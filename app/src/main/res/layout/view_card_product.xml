<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_offset">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/producer_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producer name"
        android:textColor="#737373"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image" />

    <TextView
        android:id="@+id/product_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producer name"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/producer_name_text" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/product_rating_bar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_name_text" />

    <TextView
        android:id="@+id/reviews_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="46 reviews"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_marginStart="@dimen/default_offset"
        app:layout_constraintBottom_toBottomOf="@+id/product_rating_bar"
        app:layout_constraintStart_toEndOf="@+id/product_rating_bar"
        app:layout_constraintTop_toTopOf="@+id/product_rating_bar" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oxfords are arguably the most essential type of dress shoe in the modern man’s wardrobe.
\n\n(Which is ironic, because their origin is old as sh*t. They’re named for the UK’s Oxford University, where they originally became popular way back in the Victorian Era of the 19th century.)
\n\nShoe nerds like me geek out on oxfords thanks to their closed lacing system, which means the eyelet tabs that the laces pass through are sewn on underneath the shoe’s vamp"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_rating_bar" />

    <TextView
        android:id="@+id/old_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 1000"
        android:textColor="#737373"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/default_offset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_text" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 759"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_price_text" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:cardBackgroundColor="#DC2626"
        android:layout_marginStart="@dimen/default_offset"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/price_text"
        app:layout_constraintStart_toEndOf="@+id/price_text"
        app:layout_constraintTop_toTopOf="@+id/price_text">

        <TextView
            android:id="@+id/sale_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-35%"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/white" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/count_card"
        android:layout_width="128dp"
        android:layout_height="44dp"
        app:cardCornerRadius="4sp"
        app:strokeColor="#b7b7b7"
        android:layout_marginTop="@dimen/default_offset"
        app:layout_constraintTop_toBottomOf="@id/price_text"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/minus_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/minus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/count_in_cart_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/plus_button"
                app:layout_constraintStart_toEndOf="@+id/minus_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_cart_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/default_offset"
        android:text="@string/add_to_cart"
        android:textSize="16sp"
        app:backgroundTint="@color/black"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/count_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/count_card"
        app:layout_constraintTop_toTopOf="@+id/count_card" />
</androidx.constraintlayout.widget.ConstraintLayout>