<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/view_recommendation_block"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/default_offset"
    android:paddingVertical="@dimen/default_offset">

    <TextView
        android:id="@+id/header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recommendation"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:textColor="@color/recommendationBlock_header_textColor"
        android:textSize="@dimen/recommendationBlock_header_textSize"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@+id/show_all_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_all_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_all"
        android:textColor="@color/recommendationBlock_showAll_textColor"
        android:textSize="@dimen/recommendationBlock_showAll_textSize"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginEnd="@dimen/default_offset"
        android:paddingStart="@dimen/default_offset"
        app:layout_constraintBottom_toBottomOf="@+id/header_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_products_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header_text"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/default_offset"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/view_recommendation_card_product" />
</androidx.constraintlayout.widget.ConstraintLayout>